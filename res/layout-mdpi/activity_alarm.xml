<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/shake_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/shake_stop_alarm_tips"
        android:textColor="@color/text_light_gray"
        android:textSize="@dimen/text_large" />
    
    <TextView
        android:id="@+id/current_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12:00"
        android:layout_above="@id/shake_tips"
        android:textColor="@color/light_blue"
        android:textSize="@dimen/text_xxxlarge" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/current_time"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:gravity="center" >

        <com.alarmclock.shake.app.widget.CircleProgressBar
            android:id="@+id/circle_progressbar"
            android:layout_width="@dimen/circle_progressbar_size"
            android:layout_height="@dimen/circle_progressbar_size" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:text="fjkslhklg" />
    </LinearLayout>

</RelativeLayout>